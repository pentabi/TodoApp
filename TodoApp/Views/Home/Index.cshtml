@model TodoApp.ViewModels.TodoViewModel
@{
    ViewData["Title"] = "Todo Page";
}

<div class="container py-5">
    <form method="post" asp-controller="Todo" asp-action="Create">
            <div class="card">
                <div class="card-body" >
                    <div class="d-flex flex-row align-items-center">
                        <input asp-for="NewTodo.Title" class="form-control form-control-lg" id="exampleFormControlInput1"
                               placeholder="Add new..." style="border-color: transparent;">
                        <a href="#!" data-mdb-toggle="tooltip" title="Set due date">
                            <i class="fas fa-calendar-alt fa-lg me-3"></i>
                        </a>
                        <div>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </div>
            </div>
        <div class="mb-3 py-1">
            <input asp-for="NewTodo.Description" class="form-control form-control-lg" placeholder="   Details..."></input>
            <span asp-validation-for="NewTodo.Description" class="text-danger"></span>
        </div>
    </form>

    <hr class="my-4">

    <div class="list-group">
        @if (Model != null)
        {
            @foreach (var item in Model.TodoList)
            {
                <div class="list-group-item d-flex justify-content-between align-items-center mb-3  shadow-sm">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="">
                        <label class="form-check-label">
                            @item.Title
                            <small class="text-muted">@item.Description</small>
                        </label>
                    </div>
                    <div>
                        <small class="text-muted">@item.CreatedDate.ToString("yyyy-MM-dd")</small> <!-- Add the small date here -->
                        <a asp-controller="Todo" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary mx-1 shadow-sm">View</a>
                        <a asp-controller="Todo" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary mx-1 shadow-sm">Edit</a>
                        <a asp-controller="Todo" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary mx-1 alert-danger shadow-sm">Delete</a>

                    </div>
                </div>
            }
        }
        else
        {
            <p>No todos found.</p> <!-- Display a message if Model is null -->
        }
        <div class="p-3">
            <a asp-controller="Todo" asp-action="Create" class="btn btn-sm btn-primary">Create</a>
        </div>


    </div>
</div>
