@using TodoApp.Data.Enum;
@model Todo

<form method="post" asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" value="AddressId" id="AddressId" />
    <div class="mb-3">
        <label asp-for="Title">To-do</label>
        <input asp-for="Title" class="form-control" placeholder="add To-do">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Description">details</label>
        <textarea asp-for="Description" class="form-control pre-wrap" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="TodoCategory">TodoCategory</label>
        <select asp-for="TodoCategory" asp-items="@Html.GetEnumSelectList<TodoCategory>()" class="form-control"></select>
        <span asp-validation-for="TodoCategory" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="CreatedDate">Date</label>
        <input asp-for="CreatedDate" id="datepicker" name="CreatedDate" class="form-control" placeholder="Select a date" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#datepicker").datepicker({
                dateFormat: "yy-mm-dd"
            });
        });
    </script>
}