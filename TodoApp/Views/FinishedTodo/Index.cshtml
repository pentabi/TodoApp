@model TodoApp.ViewModels.FinishedTodoViewModel
@{
    ViewData["Title"] = "Todo Page";
}
    <div class="list-group">
        @if (Model != null)
        {
            @foreach (var item in Model.FinishedTodoList)
            {
                <div class="list-group-item d-flex justify-content-between align-items-center mb-3">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" checked>
                        <label class="form-check-label">
                            @item.Title
                            <small class="text-muted">@item.Description</small>
                        </label>
                    </div>
                    <div>
                        <small class="text-muted">@item.CreatedDate.ToString("yyyy-MM-dd")</small> <!-- Add the small date here -->
                    <a asp-controller="FinishedTodo" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary mx-1">View</a>
                    <a asp-controller="FinishedTodo" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary mx-1">Edit</a>
                    <a asp-controller="FinishedTodo" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary mx-1 alert-danger">Delete</a>

                    </div>
                </div>
            }
        }
        else
        {
            <p>No todos found.</p> <!-- Display a message if Model is null -->
        }
        <div class="p-3">
            <a asp-controller="Todo" asp-action="Create" class="btn btn-sm btn-primary">Create</a>
        </div>


    </div>
</div>
